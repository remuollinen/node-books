<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>All Books</title>
		<link rel="stylesheet" href="/styles/styles.css" />
	</head>
	<body>
		<main>
			<h2>All Books</h2>
			<table>
				<thead>
					<tr>
						<th>Book ID</th>
						<th>Name</th>
						<th>Author</th>
						<th>Genre</th>
						<th>Published</th>
					</tr>
				</thead>
				<tbody>
					<% result.sort((a,b) => a.id - b.id).forEach(book => { %>
					<tr>
						<td><%= book.id %></td>
						<td><%= book.name %></td>
						<td><%= book.author %></td>
						<td><%= book.genre %></td>
						<td><%= book.year %></td>
					</tr>
					<% }) %>
				</tbody>
			</table>
			<a href="/"><button>Menu</button></a>
		</main>
	</body>
</html>
